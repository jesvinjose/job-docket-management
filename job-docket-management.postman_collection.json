{
  "info": {
    "name": "Job Docket Management API",
    "_postman_id": "9b8f2614-1b40-4b60-98b1-ccd1dfe23642",
    "description": "Postman Collection for Jobâ€“Docket Management Backend (Node.js + Express + MongoDB). Includes Jobs, Dockets, and Summary APIs.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clientName\": \"TATA\",\n  \"siteLocation\": \"Chennai\"\n}"
            },
            "url": "{{base_url}}/jobs"
          }
        },
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/jobs?page=1&limit=10"
          }
        },
        {
          "name": "Get Job By ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/jobs/{{jobId}}"
          }
        },
        {
          "name": "Close Job",
          "request": {
            "method": "PATCH",
            "url": "{{base_url}}/jobs/{{jobId}}/close"
          }
        }
      ]
    },
    {
      "name": "Dockets",
      "item": [
        {
          "name": "Create Docket",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"supervisorName\": \"Ravi\",\n  \"date\": \"21-11-2025\",\n  \"labourItems\": [\n    { \"workerName\": \"Arun\", \"role\": \"labourer\", \"hoursWorked\": 8 },\n    { \"workerName\": \"Manu\", \"role\": \"electrician\", \"hoursWorked\": 6 }\n  ],\n  \"notes\": \"Work completed\"\n}"
            },
            "url": "{{base_url}}/jobs/{{jobId}}/dockets"
          }
        },
        {
          "name": "Get Dockets By Job",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/jobs/{{jobId}}/dockets?from=01-11-2025&to=30-11-2025"
          }
        },
        {
          "name": "Get Docket Summary",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/dockets/summary"
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Server Active",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/active"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "jobId",
      "value": "REPLACE_WITH_JOB_ID"
    }
  ]
}
